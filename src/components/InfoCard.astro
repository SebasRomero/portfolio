---
import InfoComponent from "./InfoComponent.astro";
import MailIcon from "@/assets/mail.svg";
import Cake from "@/assets/cake.svg";
import Location from "@/assets/location.svg";
import Phone from "@/assets/phone.svg";
import Memoji from "@/assets/memoji.avif"
---

<section
  class="bg-[#303031] w-full lg:max-w-[16vw] h-full flex flex-col items-center text-center px-8 py-4 rounded-3xl border border-[#565656]"
>
  <div>
    <div class="bg-[#585859] rounded-3xl mt-10 size-30 mx-auto">
        <img src={Memoji.src} alt="Me" class="rounded-2xl">
    </div>
    <div class="my-4">
      <span class="text-2xl">Sebastian Romero</span>
    </div>
    <div>
      <span class="bg-[#434344] px-3 py-1 rounded-xl">Software Engineer</span>
    </div>
  </div>
  <div class="h-[0.5px] my-8 w-full bg-[#565656]"></div>
  <div class="w-full flex flex-col h-full justify-between">
    <ul>
      <a href="mailto:sebastian_engineer@hotmail.com">
        <InfoComponent
          icon={MailIcon}
          title="Email"
          value="sebastian_engineer@hotmail.com"
        />
      </a>
      <InfoComponent icon={Phone} title="Phone" value="3059700394" />
      <InfoComponent icon={Cake} title="Age" value="23" />
      <InfoComponent icon={Location} title="Location" value="Miami, FL" />
    </ul>
    <ul class="flex justify-center my-6">
      <li class="mx-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-github-icon lucide-github"
          ><path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
        >
      </li>
      <li class="mx-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-linkedin-icon lucide-linkedin"
          ><path
            d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
          ></path><rect width="4" height="12" x="2" y="9"></rect><circle
            cx="4"
            cy="4"
            r="2"></circle></svg
        >
      </li>
    </ul>
  </div>
</section>
