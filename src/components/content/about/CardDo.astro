---
const { title, description, icon } = Astro.props;
---

<li
  id="card"
  class="px-1 py-1 bg-[var(--card-bg)] border border-[var(--border-color)] rounded-lg transition transform-3d hover:scale-102 hover:rotate-2"
>
  <div class="inner flex items-center justify-between gap-2  px-4 py-2 bg-[var(--card-bg)] rounded-lg">
    <div class="flex items-center justify-center">
      <img src={icon} alt={"icon"} class="w-12 h-12 bg-center bg-cover" />
    </div>
    <div class="flex flex-col">
      <span class="font-semibold text-lg">{title}</span>
      <span>{description}</span>
    </div>
  </div>
</li>

<style>
  #card .inner {
    background: var(--secondary-color);
    color: #fff;
  }

  #card {
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #card .inner {
    position: relative;
    z-index: 1;
    width: 100%;
    margin: 0px;
  }

  #card::before {
    content: "";
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(102, 102, 102, 0.75) 50%,
      rgba(255, 255, 255, 0) 100%
    );
    height: 300px;
    width: 100px;
    transform: translate(0);
    position: absolute;
    animation: rotate 5s linear forwards infinite;
    z-index: 0;
    top: 50%;
    transform-origin: top center;
  }

  @keyframes rotate {
    from {
      transform: rotate(0);
    }

    to {
      transform: rotate(360deg);
    }
  }
</style>
